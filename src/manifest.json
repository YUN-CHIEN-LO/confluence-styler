{
  "name": "LYC Confluence Styles",
  "description": "Custom Confluence Styles for Syntec",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "assets/hello_extensions.png"
  },
  "content_scripts": [
    {
      "css": ["styles/cf-dashboard.css"],
      "matches": ["https://confluence.syntecclub.com/*"]
    },
    {
      "css": ["styles/cf-page.css"],
      "js": ["scripts/cf-page.js"],
      "matches": [
        "https://confluence.syntecclub.com/display/*",
        "https://confluence.syntecclub.com/pages/viewpage.action?*"
      ]
    },
    {
      "css": ["styles/jr-dashboard.css"],
      "matches": ["https://jira.syntecclub.com/secure/Dashboard.jspa"]
    },
    {
      "css": ["styles/jr-browse.css"],
      "matches": ["https://jira.syntecclub.com/browse/*"]
    },
    {
      "js": ["scripts/cf-editor.js"],
      "matches": [
        "https://confluence.syntecclub.com/pages/resumedraft.action?*"
      ]
    }
  ]
}
